<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.neilcastellino.bonvoyage.Homepage"
    tools:showIn="@layout/activity_homepage">

    <TextView
        android:id="@+id/homepage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Bon Voyage"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/welcomes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homepage_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Welcomes you"
        android:textColor="#000000"
        android:textSize="25sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homepage_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:progressDrawable="@drawable/cpb" />
</RelativeLayout>
