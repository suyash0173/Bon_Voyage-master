<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.neilcastellino.bonvoyage.Dubai"
    tools:showIn="@layout/activity_dubai">

    <HorizontalScrollView
        android:id="@+id/d3f1"
        android:layout_width="352dp"
        android:layout_height="211dp"
        android:layout_margin="0dp"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:adjustViewBounds="true"
                android:src="@drawable/du1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:adjustViewBounds="true"
                android:src="@drawable/du2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/du3" />
        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/d3f2"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_below="@id/d3f1">

        <TextView
            android:id="@+id/du"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Dubai"
            android:textColor="#000000"
            android:textSize="50sp" />

        <ScrollView
            android:id="@+id/sc_du"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/du">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dubai is a city in the United Arab Emirates known for luxury shopping, ultramodern architecture and a lively nightlife scene. Burj Khalifa, an 830m-tall tower, dominates the skyscraper-filled skyline. At its foot lies Dubai Fountain, with jets and lights choreographed to music. On man-made islands just offshore is Atlantis, the Palm, a resort with water and marine-animal parks."
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/hotels_title_du"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hotels"
                    android:textColor="#000000"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/du_h1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. St. George Hotel"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/du_h2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Armani Hotel"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:visibility="gone" />


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
